<Window x:Class="MachineAccounting.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить пользователя" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="ФИО" Margin="0,0,0,5" />
            <TextBox Name="FullNameTextBox" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Имя пользователя" Margin="0,0,0,5" />
            <TextBox Name="UsernameTextBox" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Пароль" Margin="0,0,0,5" />
            <PasswordBox Name="PasswordBox" Height="30" Margin="0,0,0,10" />

            <Button Content="Сохранить" Height="40" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>
