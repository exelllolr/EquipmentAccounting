<Window x:Class="MachineAccounting.Views.AddEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить технику" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название техники" Margin="0,0,0,5" />
            <TextBox Name="NameTextBox" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Модель техники" Margin="0,0,0,5" />
            <TextBox Name="ModelTextBox" Height="30" Margin="0,0,0,10" />

            <TextBlock Text="Серийный номер" Margin="0,0,0,5" />
            <TextBox Name="SerialNumberTextBox" Height="30" Margin="0,0,0,10" />

            <Button Content="Сохранить" Height="40" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>
