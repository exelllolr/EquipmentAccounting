<Window x:Class="Machine_Accounting.Widows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Machine_Accounting.Widows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Добавить пользователя" Height="40" Margin="10" Click="AddUser_Click"/>
            <Button Content="Редактировать профиль" Height="40" Margin="10" Click="EditProfile_Click"/>
            <Button Content="Управление техникой" Height="40" Margin="10" Click="ManageEquipment_Click"/>
            <Button Content="Просмотр техники" Height="40" Margin="10" Click="ViewEquipment_Click"/>
        </StackPanel>
    </Grid>
</Window>
