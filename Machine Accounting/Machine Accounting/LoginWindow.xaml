<Window x:Class="MachineAccounting.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Логин (Username):" Margin="0,10,0,5"/>
            <TextBox x:Name="Username" Margin="0,0,0,10" Height="30"/>

            <TextBlock Text="Пароль:" Margin="0,10,0,5"/>
            <PasswordBox x:Name="Password" Margin="0,0,0,10" Height="30"/>

            <Button Content="Войти" Height="40" Click="Login_Click"/>
            <Button x:Name="BHelp" Click="BHelp_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="20" Height="10" Margin="0 10 0 0"/>

        </StackPanel>
    </Grid>
</Window>
